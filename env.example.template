# ============================================
# MEMORY BANK CONFIGURATION
# ============================================

# Enable Memory Bank feature (REQUIRED for Memory Bank creation)
MOMENTUM_ENABLE_MEMORY_BANK=true

# Google Cloud Project ID (REQUIRED)
MOMENTUM_NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id-here

# Agent Engine Location (defaults to us-central1 if not set)
# Must be a region where Vertex AI Agent Engine is available
MOMENTUM_AGENT_ENGINE_LOCATION=us-central1

# ============================================
# GOOGLE CLOUD CREDENTIALS
# ============================================

# Option 1: Path to service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your-service-account-key.json

# Option 2: Service account JSON as string (for deployment environments)
# MOMENTUM_GOOGLE_APPLICATION_CREDENTIALS_JSON={"type": "service_account", "project_id": "..."}

# ============================================
# FIREBASE CONFIGURATION
# ============================================

MOMENTUM_NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
MOMENTUM_NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-auth-domain
MOMENTUM_NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
MOMENTUM_NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-storage-bucket
MOMENTUM_NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
MOMENTUM_NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# ============================================
# OTHER CONFIGURATION
# ============================================

# Python backend URL
MOMENTUM_PYTHON_AGENT_URL=http://127.0.0.1:8000

# Google API Key (for Gemini, etc.)
MOMENTUM_GOOGLE_API_KEY=your-google-api-key

# Session encryption key
MOMENTUM_SESSION_SECRET=your-session-secret-here

